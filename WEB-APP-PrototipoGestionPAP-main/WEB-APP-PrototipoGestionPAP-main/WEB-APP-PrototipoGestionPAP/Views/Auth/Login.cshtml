<div class="login-container">
    <!-- Panel Izquierdo -->
    <div class="left-panel">
        <img src="https://upload.wikimedia.org/wikipedia/commons/6/6d/LogoUGcolor.png" alt="Logo">
    </div>

    <!-- Panel Derecho -->
    <div class="right-panel">
        <h2>Bienvenido</h2>
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1055;">
                <div class="toast align-items-center text-white bg-danger border-0 show" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="d-flex">
                        <div class="toast-body">
                            @ViewBag.ErrorMessage
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                </div>
            </div>

        }
        <form method="post" action="/Auth/Login" class="w-75">
            <div class="mb-3">
                <input type="text" class="form-control" id="nombreUsuario" name="NombreUsuario" placeholder="Correo electrónico" required>
            </div>
            <div class="mb-3">
                <input type="password" class="form-control" id="contraseña" name="Contraseña" placeholder="Contraseña" required>
            </div>
            <div class="form-text mb-3">
                <a href="#">¿Olvidaste tu contraseña?</a>
            </div>
            <button type="submit" class="btn btn-primary w-100">Iniciar Sesión</button>
        </form>
    </div>
</div>

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .login-container {

        display: flex;
        height: 90vh;
        box-shadow: 0 4px 5px rgba(0, 0, 0, 0.3);
    }

    .left-panel {
        flex: 1;
        background: url('https://www.eluniverso.com/resizer/v2/VMHDJQRQ55CMBAU2RYZLUP3GLQ.JPG?auth=efe0daf3be464572b75732a8eeb917ccda11a711c3119259f66adff45fa62251&width=954&height=670&quality=75&smart=true') center/cover no-repeat;
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
    }

        .left-panel::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 67, 131, 0.5);
        }

        .left-panel img {
            position: relative;
            z-index: 1;
            width: 150px;
            height: auto;
            filter: drop-shadow(0 4px 10px rgba(0, 0, 0, 0.5)); 
            filter: brightness(0) invert(1); 
        }



    .right-panel {
        flex: 1;
        background-color: white;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        padding: 20px;
    }

        .right-panel h2 {
            color: #004383;
            margin-bottom: 20px;
        }

    .form-control {
        margin-bottom: 15px;
        border: 1px solid #608bb2;
    }

    .btn-primary {
        background-color: #004383;
        border: none;
    }

        .btn-primary:hover {
            background-color: #00315a;
        }

    .form-text a {
        color: #608bb2;
        text-decoration: none;
    }

        .form-text a:hover {
            color: #004383;
        }


</style>

<style>
    @@keyframes slideDown {
        from

    {
        transform: translateY(-100%);
        opacity: 0;
    }

    to {
        transform: translateY(0);
        opacity: 1;
    }

    }

    .toast {
        animation: slideDown 0.5s ease-out;
    }
</style>