@model WEB_APP_PrototipoGestionPAP.Models.ViewModels.CatalogViewModel<WEB_APP_PrototipoGestionPAP.Models.ProgramasNacionales>

@if (Model.CanUpdate)
{
    <div class="modal fade" id="editarModal" tabindex="-1" aria-labelledby="editarModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="@Url.Action(Model.EditActionName, Model.ControllerName)" method="post" id="formEditar">
                    @Html.AntiForgeryToken()
                    <div class="modal-header">
                        <h5 class="modal-title" id="editarModalLabel">Editar @Model.Title</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" name="id" id="hiddenId" />
                        <div class="mb-3">
                            <label for="txtNombreEdit" class="form-label">Nombre</label>
                            <input type="text" class="form-control" id="txtNombreEdit" name="Nombre" required />
                            <div class="invalid-feedback">El nombre es obligatorio.</div>
                        </div>
                        <div class="mb-3">
                            <label for="txtDescripcionEdit" class="form-label">Descripción</label>
                            <textarea class="form-control" id="txtDescripcionEdit" name="Descripcion" rows="3" required></textarea>
                            <div class="invalid-feedback">La descripción es obligatoria.</div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary" id="btnGuardarEditar" disabled>Guardar cambios</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
