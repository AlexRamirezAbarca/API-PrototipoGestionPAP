@model WEB_APP_PrototipoGestionPAP.Models.ViewModels.CatalogViewModel<WEB_APP_PrototipoGestionPAP.Models.Indicadores>

@* Modal para Agregar *@
@if (Model.CanWrite)
{
    <div class="modal fade" id="agregarModal" tabindex="-1" aria-labelledby="agregarModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="@Url.Action(Model.AddActionName, Model.ControllerName)" method="post" id="formAgregar">
                    @Html.AntiForgeryToken()
                    <div class="modal-header">
                        <h5 class="modal-title" id="agregarModalLabel">Agregar Nuevo @Model.Title</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="txtNombreIndicador" class="form-label">Nombre del Indicador</label>
                            <input type="text" class="form-control" id="txtNombreIndicador" name="NombreIndicador" required />
                            <div class="invalid-feedback">El nombre del indicador es obligatorio.</div>
                        </div>
                        <div class="mb-3">
                            <label for="txtMetodoCalculo" class="form-label">Método de Cálculo</label>
                            <textarea class="form-control" id="txtMetodoCalculo" name="MetodoCalculo" rows="3" required></textarea>
                            <div class="invalid-feedback">El método de cálculo es obligatorio.</div>
                        </div>
                        <div class="mb-3">
                            <label for="txtMetaIndicador" class="form-label">Meta del Indicador</label>
                            <input type="text" class="form-control" id="txtMetaIndicador" name="MetaIndicador" required />
                            <div class="invalid-feedback">La meta del indicador es obligatoria.</div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-primary" id="btnGuardarAgregar" disabled>Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
