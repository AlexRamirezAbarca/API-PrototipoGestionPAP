@model WEB_APP_PrototipoGestionPAP.Models.ViewModels.CatalogViewModel<WEB_APP_PrototipoGestionPAP.Models.Indicadores>

@* Modal para Editar *@
@if (Model.CanUpdate)
{
    <div class="modal fade" id="editarModal" tabindex="-1" aria-labelledby="editarModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="@Url.Action(Model.EditActionName, Model.ControllerName)" method="post" id="formEditar">
                    @Html.AntiForgeryToken()
                    <div class="modal-header">
                        <h5 class="modal-title" id="editarModalLabel">Editar @Model.Title</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" name="Id" id="hiddenId" />
                        <div class="mb-3">
                            <label for="txtNombreIndicadorEdit" class="form-label">Nombre del Indicador</label>
                            <input type="text" class="form-control" id="txtNombreIndicadorEdit" name="NombreIndicador" required />
                            <div class="invalid-feedback">El nombre del indicador es obligatorio.</div>
                        </div>
                        <div class="mb-3">
                            <label for="txtMetodoCalculoEdit" class="form-label">Método de Cálculo</label>
                            <textarea class="form-control" id="txtMetodoCalculoEdit" name="MetodoCalculo" rows="3" required></textarea>
                            <div class="invalid-feedback">El método de cálculo es obligatorio.</div>
                        </div>
                        <div class="mb-3">
                            <label for="txtMetaIndicadorEdit" class="form-label">Meta del Indicador</label>
                            <input type="text" class="form-control" id="txtMetaIndicadorEdit" name="MetaIndicador" required />
                            <div class="invalid-feedback">La meta del indicador es obligatoria.</div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary" id="btnGuardarEditar" disabled>Guardar cambios</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
