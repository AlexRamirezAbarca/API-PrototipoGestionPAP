@model WEB_APP_PrototipoGestionPAP.Models.ViewModels.CatalogViewModel<WEB_APP_PrototipoGestionPAP.Models.Actividades>

<div class="modal fade" id="editarModal" tabindex="-1" aria-labelledby="editarModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form id="formEditar" asp-action="Editar" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title" id="editarModalLabel">Edit Activity</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row g-3">
                        <input type="hidden" id="hiddenId" name="ActividadId" />

                        <div class="col-md-6">
                            <label for="txtPlanificacionIdEdit" class="form-label">Planificación ID</label>
                            <input type="number" class="form-control" id="txtPlanificacionIdEdit" name="PlanificacionId" />
                        </div>
                        <div class="col-md-6">
                            <label for="txtUnidadRespIdEdit" class="form-label">Unidad Resp. ID</label>
                            <input type="number" class="form-control" id="txtUnidadRespIdEdit" name="UnidadRespId" />
                        </div>
                        <div class="col-12">
                            <label for="txtDescripcionEdit" class="form-label">Descripción</label>
                            <textarea class="form-control" id="txtDescripcionEdit" name="Descripcion" rows="3" required></textarea>
                            <div class="invalid-feedback">Required.</div>
                        </div>
                        <div class="col-md-6">
                            <label for="txtCarreraIdEdit" class="form-label">Carrera ID</label>
                            <input type="number" class="form-control" id="txtCarreraIdEdit" name="CarreraId" />
                        </div>
                        <div class="col-md-6">
                            <label for="txtFacultadIdEdit" class="form-label">Facultad ID</label>
                            <input type="number" class="form-control" id="txtFacultadIdEdit" name="FacultadId" />
                        </div>
                        <!-- Continue similarly for all fields -->
                        <div class="col-md-6">
                            <label for="txtFuente1MontoEdit" class="form-label">Fuente 1 Monto</label>
                            <input type="number" step="0.01" class="form-control" id="txtFuente1MontoEdit" name="Fuente1Monto" required />
                            <div class="invalid-feedback">Required.</div>
                        </div>
                        <div class="col-md-6">
                            <label for="txtRecursosActividadEdit" class="form-label">Recursos Actividad</label>
                            <input type="number" step="0.01" class="form-control" id="txtRecursosActividadEdit" name="RecursosActividad" required />
                            <div class="invalid-feedback">Required.</div>
                        </div>
                        <!-- Keep adding all fields as needed -->
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" id="btnGuardarEditar" disabled>Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
